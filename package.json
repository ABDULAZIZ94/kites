{
  "name": "kites",
  "version": "1.1.0-beta.2",
  "description": "Template-based Web Application Framework",
  "main": "src/main.js",
  "scripts": {
    "copy": "copyfiles README.md LICENSE dist",
    "lint": "tslint -p tsconfig.json -c tslint.json \"**/*.ts\" -e \"*.spec.ts\"",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register extensions/**/*.spec.ts packages/**/*.spec.ts --reporter spec --retries 3 --require node_modules/reflect-metadata/Reflect.js",
    "clean": "gulp clean:bundle",
    "build": "npm run clean && gulp build --dist dist",
    "prebuild:dev": "rimraf node_modules/@kites",
    "build:dev": "gulp build --dist node_modules/@kites",
    "prerelease": "gulp copy-misc && gulp build --dist node_modules/@kites",
    "publish": "npm run prerelease && npm run build && ./node_modules/.bin/lerna publish --force-publish --access public --exact -m \"chore(@kites) publish %s release\"",
    "publish:rc": "npm run prerelease && npm run build && ./node_modules/.bin/lerna publish --npm-tag=rc --access public -m \"chore(@kites) publish %s release\"",
    "publish:next": "npm run prerelease && npm run build && ./node_modules/.bin/lerna publish --npm-tag=next --access public --skip-git -m \"chore(@kites) publish %s release\"",
    "publish:beta": "npm run prerelease && npm run build && ./node_modules/.bin/lerna publish --npm-tag=beta --access public -m \"chore(@kites) publish %s release\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vunb/kites.git"
  },
  "keywords": [
    "kites",
    "templates",
    "extensions",
    "plugins"
  ],
  "author": "Vunb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vunb/kites/issues"
  },
  "homepage": "https://kites.nodejs.vn",
  "files": [
    "src",
    "README.md"
  ],
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/debug": "^0.0.31",
    "@types/express": "4.16.1",
    "@types/lodash": "^4.14.117",
    "@types/mkdirp": "0.5.2",
    "@types/mocha": "5.2.6",
    "@types/nconf": "^0.0.37",
    "@types/node": "10.14.7",
    "@types/std-mocks": "^1.0.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "copyfiles": "2.1.0",
    "delete-empty": "^2.0.0",
    "gulp": "4.0.1",
    "gulp-clang-format": "1.0.27",
    "gulp-clean": "0.4.0",
    "gulp-sourcemaps": "2.6.5",
    "gulp-typescript": "5.0.1",
    "gulp-watch": "5.0.1",
    "lerna": "^3.15.0",
    "mocha": "5.2.0",
    "rimraf": "2.6.2",
    "std-mocks": "^1.0.1",
    "supertest": "^3.4.2",
    "ts-node": "8.2.0",
    "tslint": "5.16.0",
    "typescript": "3.5.1",
    "typescript-eslint-parser": "20.0.0"
  },
  "dependencies": {
    "@kites/engine": "1.2.0",
    "@kites/express": "1.0.1",
    "app-root-path": "2.0.1",
    "debug": "3.1.0",
    "lodash": "^4.17.11",
    "mkdirp": "0.5.1",
    "nconf": "0.10.0",
    "reflect-metadata": "0.1.13",
    "winston": "3.2.1"
  },
  "peerDependencies": {
    "@kites/engine": ">=1.2.0",
    "@kites/express": ">=1.0.1"
  }
}
