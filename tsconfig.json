{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    /* Enable all strict type-checking options. */
    "strict": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    /* Compile options*/
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "strictNullChecks": false,
    "allowJs": true,
    "types": [
      "express",
      "mocha",
      "reflect-metadata"
    ],
    "lib": [
      "es7"
    ],
    "moduleResolution": "node"
  },
  "files": [
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "packages/**/*",
    "extensions/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
